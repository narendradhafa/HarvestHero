<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.checkgrowth.CheckGrowthActivity">

    <Button
        android:id="@+id/btn_back_growth"
        style="?attr/materialIconButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/background"
        android:drawableTint="#000151"
        app:icon="@drawable/back"
        app:iconSize="35dp"
        app:iconTint="#151C51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_detail_info"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20sp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_back_growth">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_check_growth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/gabarito_regular"
                android:text="Pick plant image from gallery"
                app:icon="@drawable/photo_album"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_checked_current_growth" />

            <ImageView
                android:id="@+id/img_check_growth"
                android:layout_width="0dp"
                android:layout_height="384dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/hhicon" />

            <TextView
                android:id="@+id/tv_title_current_growth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/gabarito_regular"
                android:text="Current Growth"
                app:layout_constraintStart_toStartOf="@+id/img_check_growth"
                app:layout_constraintTop_toBottomOf="@+id/img_check_growth" />

            <TextView
                android:id="@+id/tv_checked_current_growth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gabarito_bold"
                android:text="TextView"
                android:textAppearance="@android:style/TextAppearance.Large"
                app:layout_constraintStart_toStartOf="@+id/tv_title_current_growth"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_current_growth" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>